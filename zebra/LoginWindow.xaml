<Window x:Class="zebra.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="登录 - 暗黑破坏神3专用加速器" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" VerticalAlignment="Top" HorizontalAlignment="Left" SizeToContent="WidthAndHeight">

    <StackPanel Margin="15,30,15,60" VerticalAlignment="Top" Width="300">
        <TextBlock Text="登录" FontSize="24" Margin="0,0,0,30"/>
        <StackPanel Margin="0,0,0,15">
            <TextBlock Text="用户名" Margin="0,0,0,5"></TextBlock>
            <TextBox x:Name="usernameTextBox" Height="30"></TextBox>
        </StackPanel>
        <StackPanel Margin="0,0,0,30">
            <TextBlock Text="密码" Margin="0,0,0,5"></TextBlock>
            <PasswordBox x:Name="passwordBox" Height="30" FontFamily="Segoe UI"></PasswordBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="loginButton" Content="登录" Height="30" Width="120"/>
        </StackPanel>
    </StackPanel>
</Window>
